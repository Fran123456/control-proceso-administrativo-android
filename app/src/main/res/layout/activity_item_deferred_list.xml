<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="388dp"
            android:layout_height="204dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/soldeferred_list"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Solicitud de diferido Numero: 1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/studentdeferred_list"
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Estudiante: Carlos Alberto Medrano Ortiz" />

            <TextView
                android:id="@+id/carnetdeferred_list"
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Carnet: NH16001" />

            <TextView
                android:id="@+id/coursedeferred_list"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Asignatura: Recursos Humanos (RHU115)" />

            <TextView
                android:id="@+id/palcedeferred_list"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Lugar: Lugar A" />

            <TextView
                android:id="@+id/timecedeferred_list"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="3dp"
                android:text="Hora: 15:00" />

            <TextView
                android:id="@+id/datecedeferred_list"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Fecha: 22/01/2021" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/deleteDiferred_btn"
                    android:layout_width="317dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/eliminar" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>